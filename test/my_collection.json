{
    "info": {
      "name": "Python Web App API Tests",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "GET /greet",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "http://localhost:5000/greet?name=Jonas",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",



            "path": ["RENAME_THIS_PATH"],
            "query": [
              {
                "key": "name",
                "value": "RENAME_THIS_VALUE"
              }
            ]
          }
        },


        
        "response": [],
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test(\"Status code is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Response contains correct greeting\", function () {",
                "    var jsonData = pm.response.json();",
                "    pm.expect(jsonData.message).to.eql(\"Hello, Jonas!\");",
                "});"
              ],
              "type": "text/javascript"
            }
          }
        ]
      }
    ]
  }
  